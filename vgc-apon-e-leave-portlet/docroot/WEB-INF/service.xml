<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.e.leave">
	<author>EZEYIFE</author>
	<namespace>vgcapon</namespace>

	<entity name="ELeave" local-service="true" remote-service="true">

		<!-- PK fields -->
		<column name="eLeaveId" type="long" primary="true" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
		<column name="companyId" type="long" />

		<!-- Employee Information -->
		<column name="ticketNo" type="String"/>
		<column name="staffName" type="String"/>
		<column name="staffCode" type="String"/>
		<column name="company" type="String"/>
		<column name="division" type="String"/>
		<column name="department" type="String"/>
		<column name="costCenter" type="String"/>
		<column name="officePhone" type="String"/>
		<column name="mobilePhone" type="String"/>
		<column name="email" type="String"/>
		<column name="positionType" type="String"/>
		<column name="isApplicantAgent" type="boolean"></column>
        <column name="isApproverAgent" type="boolean"></column> 
		<!-- Common Parts -->
		<column name="processType" type="String" />
		<column name="subProcessType" type="String" />
		
		<column name="submittedDate" type="Date" />
		<column name="comments"  type="String"/>
		
		<!-- Workflow -->
		<column name="status" type="int" />
		<column name="statusByUserId" type="long" />
		<column name="statusByUserName" type="String" />
		<column name="statusDate" type="Date" />

		<column name="totalLeaveEntitlement"  type="String"/>
		<column name="totalDuration"  type="String"/>
		<column name="remainingLeaveDaysBefore"  type="String"/>
		<column name="remainingLeaveDaysAfter"  type="String"/>
		<!-- Order -->
		<order by="asc">
			<order-column name="eLeaveId" />
		</order>

		<finder name="S_U" return-type="Collection">
			<finder-column name="status" />
			<finder-column name="userId" />
		</finder>
	</entity>
	<entity name="ELeaveInfo" local-service="true" remote-service="true">
		<!-- PK fields -->
		<column name="eLeaveInfoId" type="long" primary="true" />
		
		<column name="eLeaveId" type="long"/>
		
		<!-- Leave Information -->
		<column name="startDate" type="Date"/>
		<column name="endDate" type="Date"/>
		<column name="startTime" type="String"/>
		<column name="endTime" type="String"/>
		<column name="typeOfLeave" type="String"/>
		<column name="typeOfLeaveId" type="String"/>
		<column name="absenceDays" type="String"/>
		<column name="remark" type="String"/>

		<!-- Order -->
		<order by="asc">
			<order-column name="eLeaveInfoId" />
		</order>
	</entity>
</service-builder>